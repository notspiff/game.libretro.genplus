<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.genplus"
		name="Sega MS/GG/MD/CD (Genesis Plus GX)"
		version="1.7.4"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.genesis" version="1.0.0"/>
		<import addon="resource.games.libretro.restricted" version="1.0.0" optional="true"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Genesis|Game Gear|SEGA Master System</platforms>
		<extensions>mdx|md|smd|gen|bin|cue|iso|sms|gg|sg</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Sega MS/GG/MD/CD (Genesis Plus GX) v1.7.4</summary>
		<description>An enhanced port of Genesis Plus to the libretro API. Support for SG-1000, Mark-III, Master System, Game Gear, Mega Drive &amp; Mega CD hardware.

Special thanks to: twinaphex for backporting enhancements from the GX version (Gamecube/Wii port).

Supported files: .mdx, .md, .smd, .gen, .bin, .cue, .iso, .sms, .gg, .sg</description>
		<license>Non-commercial</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>